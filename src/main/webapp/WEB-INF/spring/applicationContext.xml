<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<mvc:annotation-driven />

	<mvc:resources location="/WEB-INF/static/" mapping="/static/**"></mvc:resources>
	<mvc:resources location="/WEB-INF/bootstrap/" mapping="/bootstrap/**"></mvc:resources>

	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<mvc:exclude-mapping path="/login" />
			<mvc:exclude-mapping path="/join" />
			<mvc:exclude-mapping path="/list" />
			<mvc:exclude-mapping path="/static/**" />
			<mvc:exclude-mapping path="/bootstrap/**" />
			<bean id="sessionInterceptor" class="com.ktdsProject.interceptors.SessionInterceptor" />
		</mvc:interceptor>
	</mvc:interceptors>

	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/login" />
			<bean id="logincCheckInterceptor" class="com.ktdsProject.interceptors.LogincCheckInterceptor" />
		</mvc:interceptor>
	</mvc:interceptors>

	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/view/" />
		<property name="suffix" value=".jsp" />
	</bean>

	<bean id="communityDAO" class="com.ktdsProject.community.dao.CommunityDAOImpl"></bean>


	<bean id="communityService" class="com.ktdsProject.community.service.CommunityServiceImpl">
		<property name="communityDAO" ref="communityDAO" />
	</bean>

	<bean id="communityController" class="com.ktdsProject.community.web.CommunityController">
		<property name="communityService" ref="communityService" />
	</bean>


	<bean id="memberController" class="com.ktdsProject.member.web.MemberController">
		<property name="memberService" ref="memberService" />
	</bean>

	<bean id="memberDao" class="com.ktdsProject.member.dao.MemberDaoImplForOracle">
		<property name="sqlSessionTemplate" ref="sqlSessionTemplate" />
	</bean>

	<bean id="memberService" class="com.ktdsProject.member.service.MemberServiceImpl">
		<property name="memberDao" ref="memberDao" />
	</bean>
</beans>
